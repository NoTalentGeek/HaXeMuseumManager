        <button id="UIPopupEditObjectVisitor_ButtonResetAll" text="All Visitor Reset" width="100%" />

        <!--##################################################-->

        <text text="Sentence" />
        <button disabled="true" id="UIPopupEditObjectVisitor_ButtonDisplaySentence" text="Display Sentence" width="100%" />

        <!--##################################################-->

