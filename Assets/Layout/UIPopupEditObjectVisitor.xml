        <!--##################################################-->

        <text text="Visitor Index Local" />
        <text disabled="true" id="UIPopupEditObjectVisitor_DisplayVisitorIndexLocal" multiline="true" style="borderColor:0x000000;borderSize:1"  text="" width="100%" wrapLines="true" />

