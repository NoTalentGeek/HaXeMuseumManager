<?xml version="1.0" encoding="utf-8" ?>
<scrollview height="200" width="100%" >
    <grid id="UIPopupEditObjectVisitor_Grid" width="100%" >

        <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->

        <text text="Visitor" />
        <listSelector id="UIPopupEditObjectVisitor_SelectVisitor" text="" width="100%">
        </listSelector>

        <!--@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@-->



        <!--##################################################-->

        <text text="Current/Move Exhibition" />
        <text disabled="true" id="UIPopupEditObjectVisitor_DisplayCurrentExhibition" multiline="true" style="borderColor:0x000000;borderSize:1"  text="" width="100%" wrapLines="true" />
